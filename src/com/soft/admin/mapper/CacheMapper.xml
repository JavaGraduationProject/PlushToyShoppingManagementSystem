	<select id="listCachesCount" parameterType="Cache" resultType="int">
		<![CDATA[
			SELECT count(*) FROM cache
		]]>
		<where>
			<if test="cache_id!=0">
			<![CDATA[
				cache_id = #{cache_id}
			]]>
			</if>
			<if test="user_id!=0">
			<![CDATA[
				and user_id = #{user_id}
			]]>
			</if>
		</where>
	</select>

</mapper>
