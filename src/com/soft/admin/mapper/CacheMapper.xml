			#{cache_ids}
		</foreach>
	</delete>

	<update id="updateCache" parameterType="Cache">
		<![CDATA[
			UPDATE cache
		]]>
		<set>
			<if test="cache_con!=null and cache_con!=''">
			<![CDATA[
				cache_con = #{cache_con}
			]]>
			</if>
		</set>
		<![CDATA[
			where cache_id = #{cache_id}
		]]>
	</update>

	<select id="getCache" parameterType="Cache" resultType="Cache">
		<![CDATA[
			SELECT * FROM cache
		]]>
		<where>
			<if test="cache_id!=0">
			<![CDATA[
				cache_id = #{cache_id}
			]]>
			</if>
			<if test="user_id!=0">
			<![CDATA[
				and user_id = #{user_id}
			]]>
			</if>
		</where>
	</select>

