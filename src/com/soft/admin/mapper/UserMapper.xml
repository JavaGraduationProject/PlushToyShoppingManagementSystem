<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.soft.admin.dao.IUserDao">

	<insert id="addUser" parameterType="User">
		<![CDATA[
			insert into user
				values(null,#{user_name},#{user_pass},#{real_name},#{user_sex},#{user_mail},#{user_phone})
		]]>
	</insert>

	<delete id="delUser" parameterType="int">
		<![CDATA[
			delete from user where user_id=#{user_id}
		]]>
	</delete>

	<delete id="delUsers" parameterType="int">
		<![CDATA[
			delete from user where user_id in 
		]]>
		<foreach collection="array" item="user_ids"  open="(" separator="," close=")">
			#{user_ids}
		</foreach>
	</delete>

	<update id="updateUser" parameterType="User">
		<![CDATA[
			UPDATE user
		]]>
		<set>
			<if test="user_pass!=null and user_pass!=''">
			<![CDATA[
				user_pass = #{user_pass},
			]]>
			</if>
			<if test="real_name!=null and real_name!=''">
			<![CDATA[
				real_name = #{real_name},
			]]>
			</if>
			<if test="user_sex!=0">
			<![CDATA[
				user_sex = #{user_sex},
			]]>
			</if>
			<if test="user_mail!=null and user_mail!=''">
			<![CDATA[
				user_mail = #{user_mail},
			]]>
			</if>
			<if test="user_phone!=null and user_phone!=''">
			<![CDATA[
				user_phone = #{user_phone}
			]]>
			</if>
		</set>
		<![CDATA[
			where user_id = #{user_id}
		]]>
	</update>

	<select id="getUser" parameterType="User" resultType="User">
		<![CDATA[
			SELECT * FROM user
		]]>
		<where>
			<if test="user_id!=0">
			<![CDATA[
				user_id = #{user_id}
			]]>
			</if>
			<if test="user_name!=null and user_name!=''">
			<![CDATA[
				and user_name = #{user_name}
			]]>
			</if>
			<if test="user_pass!=null and user_pass!=''">
			<![CDATA[
				and user_pass = #{user_pass}
			]]>
			</if>
		</where>
	</select>

	<select id="listUsers" parameterType="User" resultType="User">
		<![CDATA[
			SELECT * FROM (
			SELECT * FROM user
		]]>
		<where>
			<if test="user_id!=0">
			<![CDATA[
				user_id = #{user_id}
			]]>
			</if>
			<if test="user_name!=null and user_name!=''">
			<![CDATA[
				and user_name like '%${user_name}%'
			]]>
			</if>
			<if test="real_name!=null and real_name!=''">
			<![CDATA[
				and real_name like '%${real_name}%'
			]]>
			</if>
		</where>
		<![CDATA[
			order by user_id asc) t
		]]>
		<if test="start!=-1">
		<![CDATA[
			Limit ${start},${limit}
		]]>
		</if>
	</select>

	<select id="listUsersCount" parameterType="User" resultType="int">
		<![CDATA[
			SELECT count(*) FROM user
		]]>
		<where>
			<if test="user_id!=0">
			<![CDATA[
				user_id = #{user_id}
			]]>
			</if>
			<if test="user_name!=null and user_name!=''">
			<![CDATA[
				and user_name like '%${user_name}%'
			]]>
			</if>
			<if test="real_name!=null and real_name!=''">
			<![CDATA[
				and real_name like '%${real_name}%'
			]]>
			</if>
		</where>
	</select>

</mapper>
